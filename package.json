{
  "name": "dogtektor",
  "version": "1.0.0",
  "description": "AI/ML way to detect and segment dogs around you and get barking stats",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build",
    "dev:renderer": "vite",
    "test": "jest",
    "lint": "eslint src/",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "dog",
    "bark",
    "detection",
    "audio",
    "ml",
    "ai",
    "desktop",
    "electron"
  ],
  "author": "elemarin",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.1",
    "vite": "^5.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.elemarin.dogtektor",
    "productName": "DogTektor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}